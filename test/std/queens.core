queens k n
  = case n of
      0  -> Cons Nil Nil  -- [[]]
      n  -> let xss  = queens k (sub n 1)
                walk xss  = case xss of
                             Nil -> Nil
                             Cons xs xss ->
                                let walkx x  = case x of
                                                 0  -> walk xss
                                                 x  -> case safe x 1 xs of
                                                         False -> walkx (sub x 1)
                                                         True  -> Cons (Cons x xs) (walkx (sub x 1))
                                in walkx k
            in walk xss;

main  = length (queens 9 9)
